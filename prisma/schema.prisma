generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  photo     String?
  password  String
  vacations Vacation[]
  createdAt DateTime   @default(now())
  updateAt  DateTime   @updatedAt()
}

model Vacation {
  id          Int            @id @default(autoincrement())
  dates       DateVacation[]
  users       User[]
  title       String
  description String?
  location    String?
  createdAt   DateTime       @default(now())
  updateAt    DateTime       @updatedAt()
}

model DateVacation {
  id         Int      @id @default(autoincrement())
  date       DateTime @unique
  vacation   Vacation @relation(fields: [vacationId], references: [id])
  vacationId Int
  createdAt  DateTime @default(now())
  updateAt   DateTime @updatedAt()
}
